<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_ticket.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]" position="inside">
            <t t-if="receipt.company.pos_ticket_qr_code">
                <br/>
                <img class="pos-receipt-logo" 
                t-att-src="receipt.company.pos_ticket_qr_code_url" 
                alt="POS Ticket QR Code"/>
            </t>
        </xpath>
    </t>

    <t t-name="pos_ticket.OrderLinesReceipt" t-inherit="point_of_sale.OrderLinesReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-esc='line.product_name_wrapped[0]']" position="replace">
            <t t-esc="'['+line.product_default_code+']'+' '+line.product_name_wrapped[0]" />
        </xpath>
        <xpath expr="//div[@t-esc='line.product_name_wrapped[0]']" position="replace">
            <div t-esc="'['+line.product_default_code+']'+' '+line.product_name_wrapped[0]" />
        </xpath>
    </t>
</templates>
